<div class="container">

  <!-- PAGE 1 -->
  <div id="page1" class="page" style="display:block;">
    <h1>üåç AI for Social Impact</h1>
    <h2>Select Your Language</h2>
    <button onclick="setLanguage('english')">English</button>
    <button onclick="setLanguage('hindi')">‡§π‡§ø‡§®‡•ç‡§¶‡•Ä</button>
    <button onclick="setLanguage('telugu')">‡∞§‡±Ü‡∞≤‡±Å‡∞ó‡±Å</button>
    <button onclick="speakText('Please select your language')">üîä Voice Assist</button>
  </div>

  <!-- PAGE 2 -->
  <div id="page2" class="page">
    <h2 id="topicTitle"></h2>
    <button onclick="showTopic('Education')">üìò Education</button>
    <button onclick="showTopic('Climate')">üå± Climate</button>
    <button onclick="showTopic('Safety')">üõ°Ô∏è Safety</button>
    <button onclick="showTopic('Accessibility')">‚ôø Accessibility</button>
    <button onclick="showTopic('Health')">‚ù§Ô∏è Health</button>
    <button onclick="speakText('Select a topic like Education or Health')">üîä Voice Assist</button>
    <button class="back-btn" onclick="goBack(1)">‚¨Ö Back</button>
