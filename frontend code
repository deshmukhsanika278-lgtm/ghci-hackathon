    <button onclick="startVoiceInput()">üé§ Speak</button>
    <button onclick="processQuery()">Submit</button>
    <input type="file" accept="image/*" id="imageInput">
    <p><i>Upload an image for analysis</i></p>
    <button onclick="speakText('You can type or speak your query and upload a photo')">üîä Voice Assist</button>
    <button class="back-btn" onclick="goBack(2)">‚¨Ö Back</button>
    <div id="output"></div>
  </div>

