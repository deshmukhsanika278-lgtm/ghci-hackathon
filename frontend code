<script>

let language = 'english';
let topic = '';

function setLanguage(lang) {
  language = lang;
  showPage(2);

  const titles = {
    english: "Choose an Area of Interest",
    hindi: "‡§Ö‡§™‡§®‡§æ ‡§ï‡•ç‡§∑‡•á‡§§‡•ç‡§∞ ‡§ö‡•Å‡§®‡•á‡§Ç",
    telugu: "‡∞Æ‡±Ä ‡∞Ö‡∞Ç‡∞∂‡∞æ‡∞®‡±ç‡∞®‡∞ø ‡∞é‡∞Ç‡∞ö‡±Å‡∞ï‡±ã‡∞Ç‡∞°‡∞ø"
  };
  document.getElementById('topicTitle').innerText = titles[lang];
  speakText(titles[lang]);
}

function showTopic(selected) {
  topic = selected;
  showPage(3);

  document.getElementById('selectedTopic').innerText = "You chose: " + selected;
  speakText("You chose " + selected + ". Now please enter or speak your question.");
}

function processQuery() {
  const text = document.getElementById('queryBox').value;
  if (text.trim() === "") {
    speakText("Please enter your question first.");
    return;
  }

  document.getElementById('output').innerHTML = `<p><b>Your Query:</b> ${text}</p>`;
  speakText("You asked: " + text);
}

function speakText(text) {
  const synth = window.speechSynthesis;
  const utter = new SpeechSynthesisUtterance(text);
  utter.lang = language === 'hindi' ? 'hi-IN' :
               language === 'telugu' ? 'te-IN' : 'en-US';
  synth.speak(utter);
}

function startVoiceInput() {
  const recognition = new (window.SpeechRecognition || window.webkitSpeechRecognition)();
  recognition.lang = language === 'hindi' ? 'hi-IN' :
                     language === 'telugu' ? 'te-IN' : 'en-US';
  recognition.start();

  recognition.onresult = (event) => {
    const text = event.results[0][0].transcript;
    document.getElementById('queryBox').value = text;
    speakText("You said: " + text);
  };
}

function goBack(pageNum) {
  showPage(pageNum);
}

function showPage(num) {
  document.querySelectorAll('.page').forEach(p => p.style.display = 'none');
  document.getElementById('page' + num).style.display = 'block';
}

</script>

